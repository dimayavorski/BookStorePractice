<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BookStore</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/NavStyles.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-dark bg-primary navbar-expand-lg sticky-top">
        <a href="#" class="navbar-brand">BookStore</a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @Html.ActionLink("Корзина", "Index", "ShoppingCart", new { returnUrl = Request.Url.PathAndQuery }, new { @class = "nav-link" })
                </li>
            </ul>
            <form class="form-inline">
                <input class="form-control mr-sm-2" placeholder="Автор/Книга" />
                <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Поиск</button>
            </form>
        </div>
    </nav>
    <section class="container-fluid">
        <div class="row">
            <div class="col-sm-2">@{Html.RenderAction("GetNav", "Nav");}</div>
            <div class="col-sm-10">@RenderBody()</div>
        </div>
    </section>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
