<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <title>@ViewBag.Title - BookStore</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
   
    <nav id="nav" class="navbar navbar-dark bg-primary">
        <a href="#" class="navbar-brand">BookStore</a>
        @*@using (Html.BeginForm("","",FormMethod.Post,new {@class = "form-inline"}))
        {

        }*@
        @Html.ActionLink("Корзина","Index", "ShoppingCart",new { returnUrl = Request.Url.PathAndQuery}, new { @class = "btn btn-outline-light float-left" })
        <div class="form-inline">

            <input class="form-control float-right mr-sm-2" placeholder="Автор/Книга" />
            <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Поиск</button>
        </div>
    </nav>
   
    <section class="container">
        <div class="row">
            <div class="col-sm-2">@Html.Action("GetNav","Nav")</div>
            <div class="col-sm-10">@RenderBody()</div>
            

        </div>
    </section>

        @Scripts.Render("~/bundles/jquery")
        @*@Scripts.Render("~/bundles/bootstrap")*@
        @RenderSection("scripts", required: false)
</body>
</html>
