@model BookStore.WEB.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Вход";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Вход в учетную запись</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-group">
        <label>Email</label>
        @Html.EditorFor(m=>m.Email,null,new {htmlAttributes = new {@class = "form-control"}})
        @Html.ValidationMessageFor(m=>m.Email)
    </div>
    <div class="form-group">
        <label>Пароль</label>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password)
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <input type="submit" class="btn btn-secondary" value="Войти"/>

}
<h4>Если у вас нет учетной записи вы можете <a href="@Url.Action("Register")" >Зарегистрироваться</a> на нашем сайте</h4>


