@model IEnumerable<BookStore.BLL.DTO.CategoryDTO>
<div class="slide">
    <ul class="menu">
        <li class="menu_list">
            @Html.ActionLink("Главная", "Index", "Home")
        </li>
        <li class="menu_list">
            <a href="#">Жанры</a>
            <ul class="menu_drop">
                @foreach (var link in Model)
                {
                    <li>

                        @Html.RouteLink(link.CategoryName, new
                   {
                       controller = "Home",
                       action = "Index",
                       category = link.CategoryName,
                   }, new
                       {
                            @class = "" + (link.CategoryName == ViewBag.SelectedCategegory ? "" : "")
                       })

                    </li>
                }
            </ul>
        </li>
    </ul>
</div>




